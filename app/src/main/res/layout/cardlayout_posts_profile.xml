<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="15dp"
        android:backgroundTint="@color/colorPrimaryDark"
        app:cardElevation="0dp"
        app:cardMaxElevation="0dp">

        <RelativeLayout
            android:id="@+id/home_relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_cards4">

            <TextView
                android:id="@+id/user_profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="35dp"
                android:layout_marginTop="35dp"
                android:fontFamily="@font/montserrat_bold"
                android:text="jain_preyesh"
                android:textColor="#FFF"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/user_profile_name"
                android:layout_alignParentStart="true"
                android:layout_marginStart="35dp"
                android:layout_marginTop="7dp"
                android:fontFamily="@font/montserrat_medium"
                android:text="1 hour ago"
                android:textColor="#C3C3C3"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/downarrow"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="56dp"
                android:layout_marginEnd="21dp"
                app:srcCompat="@drawable/arrow_down" />

            <TextView
                android:id="@+id/content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/time"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="35dp"
                android:layout_marginTop="21dp"
                android:layout_marginEnd="21dp"
                android:fontFamily="@font/montserrat_medium"
                android:text="Got Internship in a dream company. I'm the happiest person on earth ryt now :) Thank you Everyone who have led me here!!"
                android:textAlignment="viewStart"
                android:textColor="#C3C3C3"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="21dp"
                android:layout_marginEnd="21dp"
                android:layout_marginBottom="21dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/nmessages"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/montserrat_semi_bold"
                    android:gravity="center"
                    android:text="32"
                    android:textColor="#c3c3c3"
                    android:textSize="16sp" />

                <Space
                    android:layout_width="8dp"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:id="@+id/messages"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:tint="#c3c3c3"
                    app:srcCompat="@drawable/messages" />

                <Space
                    android:layout_width="20dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/nhearts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/montserrat_semi_bold"
                    android:gravity="center"
                    android:text="40"
                    android:textColor="#c3c3c3"
                    android:textSize="16sp" />

                <Space
                    android:layout_width="8dp"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:id="@+id/heart"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:tint="#c3c3c3"
                    app:srcCompat="@drawable/heart" />
            </LinearLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>