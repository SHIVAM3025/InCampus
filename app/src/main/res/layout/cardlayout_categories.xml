<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f0f2">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="#f1f0f2"
        app:cardBackgroundColor="#f1f0f2"
        app:cardElevation="0dp"
        app:cardMaxElevation="0dp">


        <RelativeLayout
            android:id="@+id/home_relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="164dp"
            android:background="@drawable/bg_cards3">


            <com.github.siyamed.shapeimageview.mask.PorterShapeImageView
                android:id="@+id/bg_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginVertical="0dp"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="0dp"
                android:scaleType="fitXY"
                android:src="@drawable/scene"
                app:siShape="@drawable/bg_cards3"
                app:siSquare="true" />

            <TextView
                android:id="@+id/heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="50dp"
                android:fontFamily="@font/montserrat_bold"
                android:text="TextView"
                android:textColor="#fff"
                android:textSize="26sp" />

            <TextView
                android:visibility="gone"
                android:id="@+id/topicsArticles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_below="@id/heading"
                android:layout_marginTop="8dp"
                android:layout_marginStart="50dp"
                android:layout_marginBottom="28dp"
                android:fontFamily="@font/montserrat_medium"
                android:text="128 topics - 4k articles"
                android:textColor="#E4E4E4"
                android:textSize="16sp" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>